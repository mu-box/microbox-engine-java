#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/microbox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/java.sh

# dynamically generate a Boxfile from a template,
# and print to stdout
if [[ $(grep -c build_triggers /opt/microbox/hooks/lib/boxfile.rb) -gt 1 ]]; then
	cat <<-END
	run.config:
	  build_triggers:
	    - pom.xml
	    - build.gradle
	END
fi
